<div class="row mb-5" data-controller="post" data-post-id-value=<%=@post.id%>>
  <div class="col-md-6">
    <lite-youtube videoid=<%=@post.video_id%>></lite-youtube>
  </div>
  <div class="col-md-6">
    <h3><%=@post.title%></h3>
    <span>Shared by <%=@post.user.email%></span>
    <%= vote_zone.html_safe %>
    <div class="dd">
      <span data-post-target='cachedVotesUp'>
        <%=@post.cached_votes_up%>
      </span>
      <span>
        <i class="bi bi-hand-thumbs-up"></i>
      </span>
      <span data-post-target='cachedVotesDown'>
        <%=@post.cached_votes_down%>
      </span>
      <span>
        <i class="bi bi-hand-thumbs-down"></i>
      </span>
    </div>
    <div class="description">
      <h4>
        Description
      </h4>
      <%= @post.description %>
    </div>
  </div>
</div>
